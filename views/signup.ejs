<% let stylesheets=["/css/login.css"]; %>
<% let scripts=[{ script: "/js/signup.js" }]; %>

<%- include("templates/header", { stylesheets: stylesheets }) %>

<main class="container-fluid bg-light">
    <div class="row justify-content-center align-items-center">
        <div class="col-12 col-md-8 col-lg-9 col-xl-5">
            <div class="card shadow-sm border-0 mx-auto">
                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-4">
                        <img src="/img/RiskMapper.png" class="auth-logo" alt="RiskMapper Logo">
                        <h3 class="mt-4 mb-3">Create Account</h3>
                    </div>

                    <% if (locals?.error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <% for(let i=0; i < error.length; i++) { %>
                                <div><%= error[i] %></div>
                            <% } %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>

                    <form id="signup-form" action="/signup" method="POST" novalidate>
                        <div class="mb-3">
                            <label for="signup-name" class="form-label">Full Name</label>
                            <input type="text" class="form-control form-control-lg" 
                                   id="signup-name" name="name" 
                                   value="<%- locals?.input ? input["name"].trim() : "" %>"
                                   required>
                            <div class="invalid-feedback">Please enter your full name</div>
                        </div>

                        <div class="mb-3">
                            <label for="signup-email" class="form-label">Email Address</label>
                            <input type="email" class="form-control form-control-lg" 
                                   id="signup-email" name="email" 
                                   value="<%- locals?.input ? input["email"].trim() : "" %>"
                                   required>
                            <div class="invalid-feedback">Please enter a valid email address</div>
                        </div>

                        <div class="mb-3">
                            <label for="signup-username" class="form-label">Username</label>
                            <input type="text" class="form-control form-control-lg" 
                                   id="signup-username" name="username" 
                                   value="<%- locals?.input ? input["username"].trim() : "" %>"
                                   required>
                            <div class="invalid-feedback">Please choose a username</div>
                        </div>

                        <div class="mb-4">
                            <label for="signup-password" class="form-label">Password</label>
                            <input type="password" class="form-control form-control-lg" 
                                   id="signup-password" name="password"
                                   value="<%- locals?.input ? input["password"].trim() : "" %>"
                                   required>
                            <div class="invalid-feedback">Please create a password</div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            Create Account
                        </button>

                        <div class="text-center mt-4">
                            <p class="text-muted mb-0">Already have an account? 
                                <a href="/login" class="text-decoration-none">Sign in</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include("templates/footer", { scripts: scripts }) %>