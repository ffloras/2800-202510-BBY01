<% let stylesheets=["/css/login.css"]; %>
<% let scripts=[{ script: "/js/signup.js" }]; %>

<%- include("templates/header", { stylesheets: stylesheets }) %>
<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="/img/RiskMapper.png" class="img-fluid" style="width: 185px;" alt="logo">
                                    <!-- <h4 class="mt-1 mb-5 pb-1">Welcome to ClimateAction</h4> -->
                                </div>

                                <form id="login-form" action="/signup" method="POST">
                                    <p class="text-center">Sign up for an account!</p>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="text" id="signup-name" class="form-control" name="name"
                                            placeholder="Name" value="<%- locals?.input ? input["name"] : "" %>"/>
                                        <label class="form-label" for="signup-name">Name</label>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="text" id="signup-email" class="form-control" name="email"
                                            placeholder="Email" value="<%- locals?.input ? input["email"] : "" %>"/>
                                        <label class="form-label" for="signup-email">Email</label>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="text" id="signup-username" class="form-control" name="username"
                                            placeholder="Username" value="<%- locals?.input ? input["username"] : "" %>"/>
                                        <label class="form-label" for="signup-username">Username</label>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="password" id="signup-password" class="form-control"
                                            name="password" value="<%- locals?.input ? input["password"] : "" %>"/>
                                        <label class="form-label" for="signup-password">Password</label>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button data-mdb-button-init data-mdb-ripple-init
                                            class="btn btn-outline-danger btn-block fa-lg mb-3 p-3" type="submit"
                                            id="login-button">Sign Up</button>
                                    </div>
                                    <% if (locals?.error) {%>
                                        <ul class="list-group list-group-flush">
                                            <% for(let i=0; i < error.length; i++) { %>
                                                <li class="list-group-item text-danger">
                                                    <%= error[i]%>
                                                </li>                             
                                            <% } %>
                                        </ul>
                                    <% }%>
                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4 text-center">Welcome to RiskMapper</h4>
                                <p class="small mb-0">More information about RiskMapper is coming soon</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include("templates/footer", { scripts: scripts }) %>