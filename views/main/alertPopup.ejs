<div id="popup-content">
  <div id="alert">
    <div class="mb-3 mx-auto">
      <p class="">Would you like to save this location?</p>
    </div>

    <div id="alert-box" class="mb-3 form-check d-flex align-items-center gap-4 mx-auto px-5 py-3 rounded">
      <input type="checkbox" class="form-check-input" id="alert-checkbox" value="yes">
      <label class="form-check-label" for="alert-checkbox">
        <div>I want to receive alerts</div>
        <small>You will receive an email if this locations undergoes a new climate risk</small>
      </label>
    </div>
    <div class="d-flex justify-content-around">
      <button type="button" id="alert-save" class="btn btn-primary">Save</button>
      <button type="button" id="alert-cancel" class="btn btn-primary">Cancel</button>
    </div>
  </div>

</div>